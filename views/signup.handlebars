<div class='row d-flex mt-3 justify-content-center'>
    <div class='col-8'>
        <div class='signup'>
            <!-- Sign up Page -->
            <form class='form signup-form'>
                <h2 class='signup-title p-2 text-center font-semibold' style="font-size: 2vw;">Create an account!</h2>
                <div class='p-3 justify-center'>
                    <label
                        class='form-label font-semibold'
                        for='signup-username'
                    >Username:</label>
                    <input
                        class='form-control'
                        type='text'
                        id='signup-username'
                        name='signup-username'
                    />
                    <label
                        class='form-label mt-3 font-semibold'
                        for='signup-email'
                    >Email:</label>
                    <input
                        class='form-control'
                        type='text'
                        id='signup-email'
                        name='signup-email'
                    />

                    <label
                        class='form-label mt-3 font-semibold'
                        for='signup-password'
                    >Password:</label>
                    <input
                        class='form-control'
                        type='password'
                        id='signup-password'
                    />
                    <p class="text-red-400 font-semibold">*Minimum 8 characters</p>

                    <button class='btn btn-primary mt-3 font-semibold hover:text-green' type='submit'>Sign up</button>

                    <p class="text-center pt-10 font-semibold" style="font-size: 2wv"> Already a user? <a href='/login' class="hover:text-green">Login</a> here. </p>
                </div>
            </form>
        </div>
    </div>
</div>

<script src='./js/signup.js'></script>