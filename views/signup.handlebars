<div class='row d-flex mt-3 justify-content-center'>
    <div class='col-8'>
        <div class='signup'>
            <!-- Sign up Page -->
            <form class='form signup-form'>
                <h2 class='signup-title p-2'>Create an account</h2>
                <div class='p-3'>
                    <label
                        class='form-label'
                        for='signup-username'
                    >Username:</label>
                    <input
                        class='form-control'
                        type='text'
                        id='signup-username'
                        name='signup-username'
                    />
                    <label
                        class='form-label mt-3'
                        for='signup-email'
                    >Email:</label>
                    <input
                        class='form-control'
                        type='text'
                        id='signup-email'
                        name='signup-email'
                    />

                    <label
                        class='form-label mt-3'
                        for='signup-password'
                    >Password:</label>
                    <input
                        class='form-control'
                        type='password'
                        id='signup-password'
                    />
                    <p>*Minimum 8 characters</p>

                    <button class='btn btn-primary mt-3' type='submit'>Sign up</button>

                    <p> Already a user? <a href='/login'>Login</a> here. </p>
                </div>
            </form>
        </div>
    </div>
</div>

<script src='./js/signup.js'></script>